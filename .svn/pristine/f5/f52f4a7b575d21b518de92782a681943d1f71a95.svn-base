}

.myButtonS:active{
  box-shadow: inset 0 5px 10px #707070,inset 0 -5px 10px #707070;
}

.scroll-wrapper {
  -webkit-overflow-scrolling: touch;
  overflow-y: scroll;
  /* 提示: 请在此处加上需要设置的大小(dimensions)或位置(positioning)信息! */
}
.scroll-wrapper iframe {
  /* 你自己指定的样式 */
}
.title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding-top: 5px;
  padding-bottom: 5px;
}

/*//设置字体位置*/
.textLocation{
  text-align: center;
  color: #111111;
}

/*//柱状图的CSS*/
.bar rect {
  fill: steelblue;
}

.bar text {
  fill: #111;
  font: 10px sans-serif;
}

.axis path,
.axis line {
  stroke: #000;
  fill: none;
}


.filebox{width:120px;overflow:hidden;position:relative;}/*让部分file不显示*/
.filebox input:file{position:absolute;left:0;top:0;z-index:2;opacity:0;}/*透明，绝对定位*/
.filebox span{display:block;width:60px;line-height:28px;float:left;}/*模拟按钮*/
